<?xml version="1.0"?>
<openerp>
    <data>

        <!-- Invoice报表 -->
        <record id="view_invoice_report_wizard" model="ir.ui.view">
            <field name="name">oecn_mc_report_invoice.invoice_report_wizard</field>
            <field name="model">oecn_mc_report_invoice.invoice_report_wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Invoice Report">
                    <field name="bank_account" />
                    <group col="4" colspan="4">
                        <button icon="gtk-ok" name="print_report" string="Print" type="object"/>
                        <button icon="gtk-cancel" special="cancel" string="Cancel"/>
                    </group>
                </form>
            </field>
        </record>
        <!--产品动作定义 -->
        <record id="action_report_invoice" model="ir.actions.act_window">
            <field name="name">Master Concept Invoice Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">oecn_mc_report_invoice.invoice_report_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem
            action="action_report_invoice"
            icon="STOCK_PRINT"
            id="menu_action_invoice_report_form"
            parent="account.menu_finance_reporting"
            sequence="16"
        />

    </data>
</openerp>
