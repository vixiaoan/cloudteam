<openerp>
  <data>
    <record model="ir.ui.view" id="product_taobao_form_view1">
        <field name="name">product.taobao.form.view1</field>
        <field name="model">product.product</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            
            <notebook position="inside" >
                <page string="淘宝">
                    <group>
                        <field name="tb_picture" colspan="4" img_width="500" img_height="500" width="500" height="500" widget="image" nolabel="1"/>
                    </group>
                    <group>
                        <field name="tb_itemid" colspan="4" />
                        <field name="tb_dimension" colspan="4" />
                        <field name="tb_material" colspan="4" />
                        <field name="tb_description" colspan="4" />
                        <newline/>
                        <field name="tb_description_template" colspan="4" />
                        <newline/>
                        
                        <field name="tb_picture_urls" mode="tree" colspan="4" nolabel="1" >
                            <tree string="图片地址">
                                <field name="picture_url" />
                            </tree>
                            <form string="图片地址">
                                <field name="picture_url" />
                            </form>
                        </field>
                        
                        
                        <separator string="产品在线状态" colspan="4"/>
                        <group><field name="tb_instock" /></group>
                        <group><field name="tb_online" /></group>
                        <group><field name="tb_onshelf"   /></group>
                        <group><field name="tb_synchronized"  readonly="1" /></group>
                        <newline/>

                    </group>
                 
                </page>
            </notebook>
        </field>
    </record>
    
    
    <record model="ir.ui.view" id="product_taobao_description_template_form">
        <field name="name">taobao.description.template.form</field>
        <field name="model">product.description.template</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="淘宝产品描述模板">
                <field name="name" colspan="4" />
                <field name="template" colspan="4" />
            </form>
        </field>
    </record>
    
    <record model="ir.ui.view" id="product_taobao_description_template_tree">
        <field name="name">taobao.description.template.tree</field>
        <field name="model">product.description.template</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="淘宝产品描述模板">
                <field name="name"  select="1"/>
            
            </tree>
        </field>
    </record>
    
    
    <record id="taobao_description_template_action" model="ir.actions.act_window">
        <field name="name">taobao.description.template</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.description.template</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="product_taobao_description_template_tree"/>
    </record>
    
       <menuitem action="taobao_description_template_action" 
                    name="淘宝产品描述模板"
                    id="menu_taobao_description_template" 
                    parent="product.menu_config_product" 
                    sequence="10"/>
    
       
  </data>
</openerp>
